<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
  <title>Edit User</title>
</head>

<body>
  <form action="/editUser" method="POST">

    <div class="modal-header">
      <h4 class="modal-title">Edit Employee</h4>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <input name="id" value="{{userData._id}}" type="hidden" class="form-control" required />
      </div>
      <div class="form-group">
        <label>Username</label>
        <input name="username" value="{{userData.username}}" type="text" class="form-control" required minlength="5" />
      </div>
      <div class="form-group">
        <label>Email</label>
        <input name="email" type="email" value="{{userData.email}}" class="form-control" required minlength="5" />
      </div>
      <div class="form-group">
        <label>Phone Number</label>
        <input name="phonenumber" type="text" value="{{userData.phonenumber}}" class="form-control" required
          minlength="10" maxlength="10" />
      </div>
    </div>
    <div class="modal-footer">
      <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
      <input type="submit" class="btn btn-info" value="Save" />
    </div>
  </form>
</body>

</html>